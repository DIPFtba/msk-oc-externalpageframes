{
	"title": "Markierbarer Balken",
	"type": "object",
	"format": "categories",
	"options": {
		"disable_collapse": true,
		"disable_edit_json": true,
		"disable_properties": true
	},
	"properties": {

		"___rects": {
			"title": "Balken",
			"type": "object",
			"format": "grid-strict",
			"options": {
				"titleHidden": true,
				"disable_collapse": true,
				"disable_edit_json": true,
				"disable_properties": true
			},
			"properties": {

				"x": {
					"title": "X",
					"type": "integer",
					"minimum": 0,
					"options": {
						"grid_columns": 4
					},
					"default": 2
				},
				"y": {
					"title": "Y",
					"type": "integer",
					"minimum": 0,
					"options": {
						"grid_columns": 4,
						"grid_break": true
					},
					"default": 2
				},
				"width": {
					"title": "Breite Balken",
					"type": "integer",
					"options": {
						"grid_columns": 4,
						"infoText": "Wenn negativ: relativ zu rechtem Rand"
					},
					"default": 500
				},
				"height": {
					"title": "Höhe Balken",
					"type": "integer",
					"options": {
						"grid_columns": 4,
						"grid_break": true
					},
					"default": 40
				},
				"valFrom": {
					"title": "Minimalwert",
					"type": "number",
					"options": {
						"grid_columns": 4
					},
					"default": 0
				},
				"valTo": {
					"title": "Maximalwert",
					"type": "integer",
					"options": {
						"grid_columns": 4,
						"grid_break": true
					},
					"default": 100
				},

				"frameWidth": {
					"title": "Rahmendicke",
					"type": "integer",
					"default": 3,
					"options": {
						"grid_columns": 4
					}
				},
				"markedColor": {
					"title": "Markierfarbe",
					"type": "string",
					"format": "color",
					"default": "#add8e6",
					"options": {
						"grid_columns": 4,
						"grid_break": true
					}
				},

				"markedValue": {
					"title": "Markierter Wert",
					"type": "number",
					"options": {
						"grid_columns": 4,
						"grid_break": true
					},
					"default": 0
				},

				"readonly": {
					"title": "Komplett unveränderbar",
					"type": "boolean",
					"format": "checkbox",
					"default": false,
					"options": {
						"grid_columns": 12,
						"grid_break": true
					}
				},

				"stickyTo": {
					"title": "Markierung nur Vielfache von",
					"type": "string",
					"enum": [ "ticks", "1", "10", "no" ],
					"options": {
						"enum_titles": [ "kleine Ticks", "1er", "10er", "(frei)" ],
						"grid_columns": 4,
						"grid_break": true,
						"dependencies": {
							"readonly": false
						}
					},
					"default": "ticks"
				},

				"___minTicks": {
					"title": "Kleine Ticks",
					"type": "boolean",
					"format": "checkbox",
					"default": true,
					"options": {
						"grid_columns": 12,
						"grid_break": true
					}
				},
				"minTicks": {
					"title": "Kleine Ticks",
					"type": "object",
					"format": "grid-strict",
					"options": {
						"remove_empty_properties": true,
						"grid_columns": 4,
						"grid_break": true,
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true,
						"dependencies": {
							"___minTicks": true
						}
					},
					"properties": {
						"vals": {
							"title": "Schrittweite",
							"type": "integer",
							"minimum": 1,
							"default": 1,
							"options": {
								"grid_columns": 4
							}
						},
						"width": {
							"title": "Strichdicke",
							"type": "number",
							"minimum": 0.5,
							"default": 1,
							"options": {
								"grid_columns": 4
							}
						},
						"color": {
							"title": "Farbe",
							"type": "string",
							"format": "color",
							"default": "#808080",
							"options": {
								"grid_columns": 4
							}
						}
					}
				},
				"___alt_minTicks": {
					"format": "object",
					"options": {
						"hidden": true,
						"dependencies": {
							"___minTicks": false
						}
					},
					"properties": {
						"vals": {
							"type": "integer",
							"default": 0
						}
					}
				},

				"___majTicks": {
					"title": "Große Ticks",
					"type": "boolean",
					"format": "checkbox",
					"default": true,
					"options": {
						"grid_columns": 12,
						"grid_break": true
					}
				},
				"majTicks": {
					"title": "Große Ticks",
					"type": "object",
					"format": "grid-strict",
					"options": {
						"remove_empty_properties": true,
						"grid_columns": 4,
						"grid_break": true,
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true,
						"dependencies": {
							"___majTicks": true
						}
					},
					"properties": {
						"vals": {
							"title": "Schrittweite",
							"type": "integer",
							"minimum": 1,
							"default": 10,
							"options": {
								"grid_columns": 4
							}
						},
						"width": {
							"title": "Strichdicke",
							"type": "number",
							"minimum": 0.5,
							"default": 1.5,
							"options": {
								"grid_columns": 4
							}
						},
						"color": {
							"title": "Farbe",
							"type": "string",
							"format": "color",
							"default": "#000000",
							"options": {
								"grid_columns": 4
							}
						}
					}
				},
				"___alt_majTicks": {
					"format": "object",
					"options": {
						"hidden": true,
						"dependencies": {
							"___majTicks": false
						}
					},
					"properties": {
						"vals": {
							"type": "integer",
							"default": 0
						}
					}
				}
			}
		},

		"dataSettings": {
			"title": "Daten",
			"type": "object",
			"format": "grid-strict",
			"options": {
				"disable_collapse": true,
				"disable_edit_json": true,
				"disable_properties": true
			},
			"properties": {

				"___jsonSchemaData": {
					"type": "object",
					"properties": {
						"___name": {
							"type":"string",
							"default":"filledBar"
						},
						"___version": {
							"type":"number",
							"default":0.1
						}
					},
					"options": {
						"hidden": true
					}
				},

				"variablePrefix": {
					"title": "Variablen-Prefix",
					"description": "Erzeugt werden 'V_Status_&lt;pref&gt;' und 'V_Input_&lt;pref&gt;_MarkVal'",
					"type": "string",
					"default": "1a",
					"options": {
						"grid_columns": 12,
						"grid_break": true
					}
				},

				"scoringVals": {
					"title": "Scoring Werte",
					"type": "array",
					"format": "table",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true,
						"grid_columns": 12,
						"grid_break": true,
						"infoText": "Bedingung: == ist gleich, logische Verknüpfung mehrerer Bedingungen möglich (or, and)"
					},
					"items": {
						"title": "Scoring Wert",
						"type": "object",
						"properties": {
							"val": {
								"title": "Scoring-Wert",
								"type": "integer"
							},
							"condition": {
								"title": "Bedingung (VarNamen in ${} setzen)",
								"type": "string",
								"format": "textarea"
							}
						}
					}
				}

			}
		}
	}
}
