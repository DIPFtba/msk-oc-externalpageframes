{
	"title": "FreePaint",
	"type": "object",
	"format": "categories",
	"options": {
		"disable_collapse": true,
		"disable_edit_json": true,
		"disable_properties": true
	},
	"properties": {

		"___freePaint": {
			"title": "PaintArea",
			"type": "object",
			"format": "grid-strict",
			"options": {
				"titleHidden": true,
				"disable_collapse": true,
				"disable_edit_json": true,
				"disable_properties": true
			},
			"properties": {
				"x": {
					"title": "X",
					"type": "integer",
					"minimum": 0,
					"default": 50,
					"options": {
						"grid_columns": 2
					}
				},
				"y": {
					"title": "Y",
					"type": "integer",
					"minimum": 0,
					"default": 2,
					"options": {
						"grid_columns": 2,
						"grid_break": true
					}
				},
				"width": {
					"title": "Breite",
					"type": "integer",
					"minimum": 100,
					"default": 500,
					"options": {
						"grid_columns": 2
					}
				},
				"height": {
					"title": "Höhe",
					"type": "integer",
					"minimum": 10,
					"default": 175,
					"options": {
						"grid_columns": 2,
						"grid_break": true
					}
				},
				"frameWidth": {
					"title": "Rahmendicke",
					"type": "integer",
					"minimum": 1,
					"default": 3,
					"options": {
						"grid_columns": 2
					}
				},
				"frameColor": {
					"title": "Rahmenfarbe",
					"type": "string",
					"format": "color",
					"default": "#000000",
					"options": {
						"grid_columns": 2,
						"grid_break": true
					}
				},
				"fill": {
					"title": "Füllung",
					"type": "string",
					"format": "color",
					"default": "#ffffff",
					"options": {
						"grid_columns": 2,
						"grid_break": true
					}
				},
				"hasMarker": {
					"title": "Marker",
					"type": "boolean",
					"format": "checkbox",
					"default": true,
					"options": {
						"grid_columns": 6,
						"grid_break": true
					}
				},
				"paintLines": {
					"title": "Linien Definitionen",
					"type": "object",
					"format": "grid-strict",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true,
						"grid_columns": 6
					},
					"properties": {
						"brush": {
							"title": "Malstift",
							"type": "object",
							"format": "grid-strict",
							"options": {
								"disable_collapse": true,
								"disable_edit_json": true,
								"disable_properties": true,
								"grid_columns": 12
							},
							"properties": {
								"strokeWidth": {
									"title": "Dicke",
									"type": "integer",
									"minimum": 1,
									"default": 4,
									"options": {
										"grid_columns": 6
									}
								},
								"stroke": {
									"title": "Farbe",
									"type": "string",
									"format": "color",
									"default": "#0000ff",
									"options": {
										"grid_columns": 6
									}
								}
							}
						},
						"marker": {
							"title": "Marker",
							"type": "object",
							"format": "grid-strict",
							"options": {
								"disable_collapse": true,
								"disable_edit_json": true,
								"disable_properties": true,
								"grid_columns": 12,
								"dependencies": {
									"root.___freePaint.hasMarker": true
								}
							},
							"properties": {
								"strokeWidth": {
									"title": "Dicke",
									"type": "integer",
									"minimum": 1,
									"default": 25,
									"options": {
										"grid_columns": 6
									}
								},
								"stroke": {
									"title": "Farbe",
									"type": "string",
									"format": "color",
									"default": "#6666ff",
									"options": {
										"grid_columns": 6
									}
								}
							}
						},
						"erase": {
							"title": "Löschen",
							"type": "object",
							"format": "grid-strict",
							"options": {
								"disable_collapse": true,
								"disable_edit_json": true,
								"disable_properties": true,
								"grid_columns": 12
							},
							"properties": {
								"strokeWidth": {
									"title": "Dicke",
									"type": "integer",
									"minimum": 1,
									"default": 15,
									"options": {
										"grid_columns": 6
									}
								}
							}
						}
					}
				},
				"modeIconBarDef": {
					"title": "Icons",
					"type": "object",
					"format": "grid-strict",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true,
						"grid_columns": 6
					},
					"properties": {
						"x": {
							"title": "X",
							"type": "integer",
							"minimum": 0,
							"default": 2,
							"options": {
								"grid_columns": 4
							}
						},
						"y": {
							"title": "Y",
							"type": "integer",
							"minimum": 0,
							"default": 2,
							"options": {
								"grid_columns": 4
							}
						},
						"spacing": {
							"title": "Abstand",
							"type": "integer",
							"minimum": 0,
							"default": 0,
							"options": {
								"grid_columns": 4
							}
						},
						"width": {
							"type": "integer",
							"default": 32,
							"options": {
								"hidden": true
							}
						},
						"height": {
							"type": "integer",
							"default": 32,
							"options": {
								"hidden": true
							}
						},
						"framePadding": {
							"type": "integer",
							"default": 2,
							"options": {
								"hidden": true
							}
						}
					}
				}
			}
		},

		"___extraLines": {
			"title": "Rechtecke / Linien",
			"type": "object",
			"format": "grid-strict",
			"options": {
				"titleHidden": true,
				"disable_collapse": true,
				"disable_edit_json": true,
				"disable_properties": true
			},
			"properties": {

				"extraRects": {
					"title": "Extra-Rechtecke",
					"type": "array",
					"format": "table",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true,
						"grid_columns": 6,
						"infoText": "Zusätzliche Rechtecke, die in Hintergrund gezeichnet werden"
					},
					"items": {
						"title": "ExtraRechteck",
						"type": "object",
						"format": "grid-strict",
						"options": {
							"disable_collapse": true,
							"disable_edit_json": true,
							"disable_properties": true
						},
						"properties": {
							"x": {
								"title": "x",
								"type": "integer",
								"minimum": 0,
								"default": 0
							},
							"y": {
								"title": "y",
								"type": "integer",
								"minimum": 0,
								"default": 0
							},
							"width": {
								"title": "Breite",
								"type": "integer",
								"minimum": 1,
								"default": 50
							},
							"height": {
								"title": "Höhe",
								"type": "integer",
								"minimum": 1,
								"default": 20
							},
							"w": {
								"title": "Dicke",
								"type": "integer",
								"minimum": 1,
								"default": 1
							},
							"c": {
								"title": "Farbe",
								"type": "string",
								"format": "color",
								"default": "#000000"
							},
							"f": {
								"title": "Füllung",
								"type": "string",
								"format": "color",
								"default": "#d3d3d3"
							},
							"clipBrush": {
								"title": "begrenzt Pinsel",
								"type": "boolean",
								"format": "checkbox",
								"default": false
							},
							"clipMarker": {
								"title": "begrenzt Marker",
								"type": "boolean",
								"format": "checkbox",
								"default": false,
								"options": {
									"dependencies": {
										"root.___freePaint.hasMarker": true
									}
								}
							}
						}
					}
				},

				"extraLines": {
					"title": "Extra-Linien",
					"type": "array",
					"format": "table",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true,
						"grid_columns": 6,
						"infoText": "Feste Extra-Linien, die zusätzlich gezeichnet werden"
					},
					"items": {
						"title": "ExtraLinie",
						"type": "object",
						"options": {
							"disable_collapse": true,
							"disable_edit_json": true,
							"disable_properties": true
						},
						"properties": {
							"x1": {
								"title": "x1",
								"type": "integer",
								"minimum": 0,
								"default": 0
							},
							"y1": {
								"title": "y1",
								"type": "integer",
								"minimum": 0,
								"default": 0
							},
							"x2": {
								"title": "x2",
								"type": "integer",
								"minimum": 0,
								"default": 0
							},
							"y2": {
								"title": "y2",
								"type": "integer",
								"minimum": 0,
								"default": 0
							},
							"w": {
								"title": "Dicke",
								"type": "integer",
								"minimum": 1,
								"default": 1
							},
							"c": {
								"title": "Farbe",
								"type": "string",
								"format": "color",
								"default": "#000000"
							}
						}
					}
				}
			}
		},

		"dataSettings": {
			"title": "Daten",
			"type": "object",
			"options": {
				"disable_collapse": true,
				"disable_edit_json": true,
				"disable_properties": true
			},
			"properties": {

				"__jsonSchemaData": {
					"type": "object",
					"properties": {
						"___name": {
							"type":"string",
							"default":"freePaint"
						},
						"___version": {
							"type":"number",
							"default":0.1
						}
					},
					"options": {
						"hidden": true
					}
				},

				"variablePrefix": {
					"title": "Variablen-Prefix",
					"description": "Erzeugt wird 'S_&lt;pref&gt;_Status'",
					"type": "string",
					"default": "Aufg1"
				}
			}
		}
	}
}