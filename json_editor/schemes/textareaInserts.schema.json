{
	"title": "Eingabezeile mit Buttons",
	"type": "object",
	"format": "categories",
	"options": {
		"disable_collapse": true,
		"disable_edit_json": true,
		"disable_properties": true
	},
	"properties": {

		"___options": {
			"title": "Erscheinungsbild",
			"type": "object",
			"format": "grid-strict",
			"options": {
				"titleHidden": true,
				"disable_collapse": true,
				"disable_edit_json": true,
				"disable_properties": true
			},
			"properties": {

				"width": {
					"title": "GesamtBreite",
					"type": "integer",
					"default": 0,
					"options": {
						"grid_columns": 4,
						"infoText": "0 = Fensterbreite, wenn <=0: relativ zu Fensterbreite"
					}
				},
				"height": {
					"title": "Höhe",
					"type": "integer",
					"default": 0,
					"options": {
						"grid_columns": 4,
						"grid_break": true,
						"infoText": "0 = Fensterhöhe, wenn <=0: relativ zu Fensterhöhe"
					}
				},
				"toolbarCellWidth": {
					"title": "Größe Toolbar-Icons",
					"type": "integer",
					"minimum": 0,
					"default": 30,
					"options": {
						"grid_columns": 4,
						"grid_break": true
					}
				},

				"toolbar": {
					"title": "Toolbar-Icons",
					"type": "object",
					"format": "table",
					"options": {
						"disable_collapse": true,
						"disable_edit_json": true,
						"disable_properties": true,
						"grid_columns": 12
					},
					"properties": {
						"comp": {
							"title": "Vergleichsoperatoren",
							"type": "boolean",
							"format": "checkbox",
							"default": false
						},
						"math": {
							"title": "Math. Operatoren",
							"type": "boolean",
							"format": "checkbox",
							"default": true
						},
						"fract": {
							"title": "Bruch",
							"type": "boolean",
							"format": "checkbox",
							"default": true
						},
						"perc": {
							"title": "Prozentzeichen",
							"type": "boolean",
							"format": "checkbox",
							"default": false
						}
					}
				}
			}
		},

		"dataSettings": {
			"title": "Daten",
			"type": "object",
			"format": "grid-strict",
			"options": {
				"titleHidden": true,
				"disable_collapse": true,
				"disable_edit_json": true,
				"disable_properties": true
			},
			"properties": {

				"___jsonSchemaData": {
					"type": "object",
					"properties": {
						"___name": {
							"type":"string",
							"default":"textareaInserts"
						},
						"___version": {
							"type":"number",
							"default":0.1
						}
					},
					"options": {
						"hidden": true
					}
				},

				"variablePrefix": {
					"title": "Variablen-Prefix",
					"type": "string",
					"description": "Erzeugt wird 'V_Status_&lt;pref&gt;' und 'V_Input_&lt;pref&gt;'",
					"default": "1a",
					"options": {
						"grid_columns": 12,
						"grid_break": true
					}
				}

			}

		}

	}
}
